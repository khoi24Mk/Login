<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">



    <VisualBrush x:Key="UserHint" AlignmentX="Left" AlignmentY="Center" Stretch="None">
        <VisualBrush.Visual>
            <Label Content="User name . . ." Foreground="Gray" />
        </VisualBrush.Visual>
    </VisualBrush>

    <Style 
        x:Key="Usernamestyle" TargetType="TextBox" > <Style.Triggers>
            <Trigger Property="Text" Value="">
                <Setter Property="Background" Value="{StaticResource UserHint}"/>
            </Trigger>
            
           
        </Style.Triggers>
       
      
       

    </Style>

   

</ResourceDictionary>